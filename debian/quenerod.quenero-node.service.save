[Unit]
Description=Quenero network node
After=network-online.target
Before=quenero-storage.service

[Service]
User=_
Type=notify
TimeoutStartSec=infinity
WatchdogSec=5min
WorkingDirectory=/var/lib/quenero
Restart=always
RestartSec=5s
ExecStart=/usr/bin/quenerod --non-interactive --config-file /etc/quenero/quenero.conf
# Enable coloured daemon output:
Environment=TERM=xterm

[Install]
WantedBy=multi-user.target
